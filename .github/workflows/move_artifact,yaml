name: Move Artifact

on:
  workflow_dispatch:
    inputs:
      build:
        description: 'Move Artifact'
        required: true
        default: 'yes'

jobs:
  move-artifact:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Move Artifact
        run: |
          # Create the destination directory if it doesn't exist
          mkdir -p path/to/destination/directory

          # Move the artifact to the destination directory
          mv risvc-toolchain.zip path/to/destination/directory/

          # Commit the changes
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add path/to/destination/directory/risvc-toolchain.zip
          git commit -m "Move risvc-toolchain.zip to path/to/destination/directory/"
          git push
